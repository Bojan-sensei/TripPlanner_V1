<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="travelers.tripplanner.register.signUp">

    <ImageView
        android:id="@+id/TVright"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_signup_right"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/TVleft"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/ic_sinup_left"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_account_circle"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cardView"
        android:paddingBottom="10dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <EditText
                android:id="@+id/ET0"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:hint="Your Name"
                android:textSize="15sp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/ET1"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:hint="Email Address"
                android:textSize="15sp"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/ET0"/>

            <EditText
                android:id="@+id/ET2"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET1"
                android:hint="Password"
                android:textSize="15sp"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/ET3"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ET2"
                android:hint="Confirm Password"
                android:textSize="15sp"
                android:inputType="textPassword"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cardView"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered? Click here to login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn"
        android:clickable="true"/>

</RelativeLayout>
